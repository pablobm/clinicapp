<%= link_to 'Back', doctor_path(@user.id), class: "btn btn-primary btn-lg" %>

<h1 class="display-3 text-center main-title mt-4">All prescriptions</h1>

<div class="row card-body mt-4">
  <div class="col-md-12">
    <% if @appointments.blank? %>
      <h4 class="font-italic">You don't have any appointment</h4>
    <% else %>
      <h2 class="font-italic">Your appointment</h2>
      <div class="d-flex gap-3 flex-wrap mt-5">
        <% @appointments.each do |appointment| %>
          <div class="card p-2">
            <div class="card-body">
              <% if appointment.prescription.blank? %>
                <span class="text-danger">Empty prescription</span>
                <%= ' ' %>
              <% else %>
                <h4><span class="text-primary">Prescription for:</span>
                  <strong><%= appointment.user.full_name %></strong></h4>
                <p><%= appointment.prescription.prescript %></p>
              <% end %>
            </div>
          </div>
        <% end %>
    <% end %>
    </div>
  </div>
</div>